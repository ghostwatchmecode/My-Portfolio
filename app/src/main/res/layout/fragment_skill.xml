<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SkillFragment">

    <LinearLayout
        android:id="@+id/topNavSkill"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topNavHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:text="@string/skillTopNav"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_sans_bold" />

        <View
            android:id="@+id/topNavView"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/black" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsvSkill"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_below="@+id/topNavSkill"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-9dp"
        android:layout_marginBottom="0dp"
        android:background="@color/green"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSkill1"
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:id="@+id/llProgramming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvProgramming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="@string/skill_Programming"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/ivProgramming"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:src="@drawable/programming" />

                    <GridLayout
                        android:id="@+id/programmingGrid"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:id="@+id/tvJava"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/programming_skill1"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvJavaExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/intermediate"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPython"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/programming_skill2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPythonExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/beginner"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvHTML"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/programming_skill3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvHTMLExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/intermediate"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvDart"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/programming_skill4"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvDartExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/beginner"
                            android:textSize="15sp" />

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSkill2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:id="@+id/llDigitalDesign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvDigitalDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="@string/skill_Design"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/ivDigitalDesign"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:src="@drawable/digital" />

                    <GridLayout
                        android:id="@+id/DigitalDesignGrid"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:id="@+id/Illustrator"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/design_skill1"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/IllustratorExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/intermediate"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPremierePro"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/design_skill2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvProExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/beginner"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvAE"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/design_skill3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvAEExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/beginner"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPhotoshop"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/design_skill4"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPhotoshopExp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/intermediate"
                            android:textSize="15sp" />

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSkill3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:id="@+id/llProblemSolving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvProblemSolving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="@string/skill_problem_solving"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/ivProblemSolving"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/prob_solving" />

                <GridLayout
                    android:id="@+id/ivProblemSolvingGrid"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:columnCount="2"
                    android:rowCount="4">

                    <TextView
                        android:id="@+id/CriticalThinking"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/ps_skill1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/CTExp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/intermediate"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvDecisionMaking"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/ps_skill2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvDecMExp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/expert"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvAdaptability"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/ps_skill3"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvAdaptabilityExp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/intermediate"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvCollaboration"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/ps_skill4"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvCollaborationExp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/intermediate"
                        android:textSize="15sp" />

                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>